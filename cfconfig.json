{
    "datasources": {
        "${CFML_DSN_NAME}": {
            "host": "${MYSQL_HOST}",
            "dbdriver": "mysql",
            "username": "${MYSQL_USER}",
            "password": "${MYSQL_PASSWORD}",
            "database": "${MYSQL_DATABASE}",
            "port": "${MYSQL_PORT}",
            "dsn": "jdbc:mysql://{host}:{port}/{database}",
            "custom": "characterEncoding=UTF-8&serverTimezone=Europe/Zurich&allowMultiQueries=true",
            "bundleName": "com.mysql.cj",
            "bundleVersion": "8.0.19"
        }
    },
    "mailServers": [{
        "username": "${MAIL_USERNAME}",
        "password": "${MAIL_PASSWORD}",
        "smtp": "${MAIL_SMTP}",
        "port": "${MAIL_PORT}",
        "tls": "${MAIL_TLS}",
        "ssl": "${MAIL_SSL}"
    }],
    "adminPassword": "${CFML_ADMIN_PASS}",
    "adminPasswordDefault": "${CFML_ADMIN_PASS}",
    "thisLocale": "${CFML_LOCALE}",
    "thisTimeZone": "${CFML_TZ}",
    "timeServer": "${CFML_TIMESERVER}",
    "useTimeServer": "true",
    "templateCharset": "UTF-8",
    "webCharset": "UTF-8",
    "whitespaceManagement": "regular"
}